    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch file",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}"
        },
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/flowg",
            // "cwd": "${workspaceFolder}",
            "args": [
                "serve",
                "--auth-dir ./data/auth",
                "--log-dir ./data/logs",
                "--config-dir ./data/config",
                "--http-bind 127.0.0.1:5080",
                "--syslog-bind 127.0.0.1:5514"
            ],
        }
    ]
}